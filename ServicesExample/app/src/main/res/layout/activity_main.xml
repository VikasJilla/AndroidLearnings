<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/startedServiceResult"
        android:layout_below="@+id/btnStartedServe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        />

    <Button
        android:id="@+id/btnStartedServe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startedservice"
        android:onClick="managerService"/>

    <Button
        android:id="@+id/btnIntentServe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/intentservice"
        android:onClick="manageIntentService"/>

    <TextView
        android:id="@+id/intentServiceResult"
        android:layout_below="@+id/btnIntentServe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        />
</RelativeLayout>